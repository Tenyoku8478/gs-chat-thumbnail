{
    "manifest_version": 2,

    "name": "GS聊天室頭像套件",
    "description": "為GS聊天室加入顯示使用者大頭貼功能",
    "version": "0.0.3.1",

    "permissions": [
        "storage",
        "http://gameschool.cc/*"
    ],
    "content_scripts": [
        {
            "matches": ["http://gameschool.cc/*"],
            "css": ["css/style.css"],
            "js": ["js/jquery-2.1.4.min.js", "js/thumbnail.js"]
        },
        {
            "matches": ["http://gameschool.cc/site/chat/"],
            "css": ["css/fullpage.css"],
            "js": ["js/fullpage.js"]
        },
        {
            "matches": ["http://gameschool.cc/*"],
            "exclude_matches": ["http://gameschool.cc/site/chat/"],
            "css": ["css/side.css"],
            "js": ["js/side.js"]
        }
    ]
}
